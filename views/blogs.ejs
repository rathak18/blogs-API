<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Blogs</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    
    body {
      padding: 20px;
      background-color: #f8f9fa;
    }
    h1 {
      margin-bottom: 20px;
      color: #343a40;
    }
    .blog-card {
      margin-bottom: 20px;
      padding: 20px;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      background-color: #ffffff; /* Card background color */
      transition: transform 0.3s ease-in-out;
    }
    .blog-card:hover {
      transform: scale(1.05); /* Scale the card on hover */
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }
    .author {
      color: #007bff; /* Author text color */
    }
    .created-at {
      color: #6c757d; /* Created At text color */
    }
  </style>
</head>
<body>
<div class="starry-background"></div>
  <div class="container">
    <h1 class="text-center">All Blogs</h1>
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-6">
          <div class="blog-card">
            <h2 style="color: #28a745;"><%= blog.title %></h2>
            <p><%= blog.content %></p>
            <p class="author"><strong>Author:</strong> <%= blog.author %></p>
            <p class="created-at"><strong>Created At:</strong> <%= blog.createdAt %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <meta http-equiv="Content-Security-Policy" content="script-src 'self' https://cdn.jsdelivr.net/npm/bootstrap@5.3.0; ...">

</body>
</html>
